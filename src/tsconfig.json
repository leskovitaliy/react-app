{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "sourceMap": true,
        "removeComments": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "jsx": "preserve",
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
